<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/joueur1UI"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/damier"
        android:background="@color/white">

        <include
            android:id="@+id/rewind"
            layout="@layout/rewind_button"/>
        <include
            layout="@layout/rewind_button_desc"/>

        <include
            android:id="@+id/backstack_pop"
            layout="@layout/backstackpop_button" />
        <include
            android:id="@+id/backstackpop_button_desc"
            layout="@layout/backstackpop_button_desc" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <include
                android:id="@+id/historique_title"
                layout="@layout/history_title_view"/>
            <include
                android:id="@+id/history1"
                layout="@layout/history_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/plr1_name_game"
            layout="@layout/player_name"/>
        <include
            android:id="@+id/plr1_turn_text"
            layout="@layout/turn_text_layout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/damier"
        layout="@layout/damier"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/joueur2UI"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rotation="180"
        app:layout_constraintStart_toEndOf="@id/damier"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/black">

        <include
            android:id="@+id/plr2_name_game"
            layout="@layout/player_name"/>
        <include
            android:id="@+id/plr2_turn_text"
            layout="@layout/turn_text_layout"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/historique_title2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_history_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>

            <TextView
                android:id="@+id/history2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/historique_title2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="15sp"
                android:text="@string/placeholder_history">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>